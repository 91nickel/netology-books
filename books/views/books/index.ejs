<%- include("./../header", {title: title}) %>
<div class="row">
    <div class="col-12">
        <% if (items && items.length > 0) { %>
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Название</th>
                    <th scope="col">Описание</th>
                    <th scope="col">Авторы</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
                <% items.forEach(function (item, i) { %>
                    <tr>
                        <th scope="row">
                            <%= i + 1 %>
                        </th>
                        <th>
                            <a href="/books/view/<%= item.id %>"><%= item.title %></a>
                        </th>
                        <th>
                            <%= item.description %>
                        </th>
                        <th>
                            <%= item.authors %>
                        </th>
                        <th>
                            <a class="btn btn-sm btn-primary" href="/books/update/<%= item.id %>">
                                <i class="fa fa-pencil" aria-hidden="true"></i>
                            </a>
                            <form action="/books/delete/<%= item.id %>" method="POST" class="d-inline">
                                <button class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                </button>
                            </form>
                        </th>
                    </tr>
                <% }) %>
                </tbody>
            </table>
        <% } else { %>
            <h1>Нету книг. Хотите <a href="/books/create">добавить</a>?</h1>
        <% } %>
    </div>
</div>
<%- include("./../footer") %>